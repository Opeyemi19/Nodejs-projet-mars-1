<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    {{!-- {{#if (user.statut === 1)}} --}}
                        {{!-- {{ user.statut }} --}}
                        <h3>Welcome <span class="">Mr. {{ user.fullname }}</span></h3>
                        {{!-- <h4>{{ user.username }}</h4> --}}
                        {{!-- <a href="/admins" class="btn btn-primary m-4">Save your links</a> --}}
                    
                    {{!-- else --}}

                        {{!-- <h3>Welcome <span class="">Utilisateur</span></h3> --}}

                    {{!-- {{/if}}  --}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {{!-- On parcourt ici la valeur de l'objet qui contient nos donnees selectionner en ds a la BD --}}
        {{#each prod}}
            <div class="col-md-3 mt-4">
                <div class="card text-center">
                    <img src="uploads/{{image}}" alt="" class="card-img-top picture">
                    <div class="card-body">
                        <h3>{{ name_prod }}</h3>
                        <span class="card">
                            Prix:<span class="badge badge-pill badge-dark mx-auto">{{ price_prod }} Fcfa</span>
                        </span>
                        <hr>
                        <a href="/profil/{{id_pan}}" class="btn btn-outline-danger">Annuller Commande</a>
                    </div>
                </div>
            </div>
        {{/each}} 
    </div>
</div>